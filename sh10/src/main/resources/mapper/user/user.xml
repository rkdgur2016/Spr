<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pcwk.ehr.user">
	 
	 <select id="doRetrieve" parameterType="com.pcwk.ehr.cmn.Search" resultType="User">
        SELECT A.*,B.*                                                                    
        FROM (                                                                            
            SELECT TT1.rnum as no,                                                        
                   TT1.user_id as userId,                                                           
                   TT1.name,                                                              
                   TT1.password,                                                          
                   TT1.birthday,                                                          
                   DECODE(u_level,1,'BASIC',2,'SILVER',3,'GOLD') "level",                                                            
                   TT1.login,                                                             
                   TT1.recommend,                                                         
                   TT1.email,                                                             
                   DECODE( TO_CHAR(TT1.reg_dt,'YYYYMMDD'), TO_CHAR(SYSDATE,'YYYYMMDD'),   
                            TO_CHAR(TT1.reg_dt,'HH24:MI'),TO_CHAR(TT1.reg_dt,'YYYY/MM/DD')
                    ) AS regDt                                                           
            FROM (                                                                        
                SELECT ROWNUM AS rnum, T1.*                                               
                FROM (                                                                    
                    SELECT *                                                              
                      FROM member                                                         
                      --WHERE                                                     
                     ORDER BY reg_dt DESC                                                 
                )T1                                                                       
                WHERE ROWNUM <![CDATA[ <= ( #{pageSize} * ( #{pageNo} -1 ) + #{pageSize} )  ]]>                                     
            )TT1                                                                          
            WHERE TT1.rnum <![CDATA[ >=  (#{pageSize} *(#{pageNo}-1)+1)  ]]>                                                            
        )A                                                                                
        CROSS JOIN                                                                        
        (                                                                                 
            SELECT COUNT(*) totalCnt                                                      
              FROM member 
              --WHERE                                                      
        )B     
	</select> 
	 
	 <select id="getAll" parameterType="User" resultType="User">
			  SELECT                                            
		    user_id,                                       
		    name,                                          
		    password,                                      
		    birthday,                                      
		    DECODE(u_level, 1, 'BASIC',
		     				 2, 'SILVER',
		     				 3, 'GOLD') "level",                                         
		    login,                                         
		    recommend,                                     
		    email,                                         
		    TO_CHAR(reg_dt,'YYYY-MM-DD HH24:MI:SS') regDt 
		FROM                                               
		    member                                         
		ORDER BY  user_id	                               
	 </select>
	 
	<update id="doUpdate" parameterType="User">
				 UPDATE member           
		 SET             
		     name       = #{name},        
		     password   = #{password},    
		     birthday   = #{birthday},    
		     u_level    =  DECODE(#{level}, 'BASIC', 1,
		    				 				'SILVER', 2,
		    				 				'GOLD', 3),        
		     login      = #{login},
		     recommend  = #{recommend},     
		     email      = #{email},     
		     reg_dt     = SYSDATE
		 WHERE                   
		         user_id = #{userId}     
	</update> 
	 	
	<select id="doSelectOne" parameterType="User" resultType="User">
			  SELECT                                           
		     user_id as userId,                                      
		     name,                                         
		     password,                                     
		     birthday,                                     
		     DECODE(u_level, 1, 'BASIC',
		     				 2, 'SILVER',
		     				 3, 'GOLD') "level",                                      
		     login,                                        
		     recommend,                                    
		     email,                                        
		     TO_CHAR(reg_dt,'YYYY-MM-DD HH24:MI:SS') regDt
		 FROM                                              
		     member                                        
		 WHERE user_id = #{userId}                                 
	</select>
	
	<select id="getCnt" parameterType="User" resultType="int">
		SELECT COUNT(*) cnt 
		FROM member        
	</select>
	
	<delete id="doDelete" parameterType="User">
		DELETE FROM member
		WHERE user_id = #{userId} 
	</delete>
	
	<delete id="deleteAll" parameterType="User">
		DELETE FROM member
	</delete>
	
	<insert id="doSave" parameterType="User">
			INSERT INTO member (
		    user_id,        
		    name,           
		    password,       
		    birthday,       
		    u_level,        
		    login,          
		    recommend,      
		    email,          
		    reg_dt          
		) VALUES (          
		    #{userId},              
		    #{name},              
		    #{password},              
		    #{birthday},              
		    DECODE(#{level}, 'BASIC', 1,
		    				 'SILVER', 2,
		    				 'GOLD', 3),              
		    #{login},              
		    #{recommend},              
		    #{email},              
		    SYSDATE         
		)                   
	</insert>
	
	
	
</mapper>